<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LogIn</servlet-name>
        <servlet-class>controlador.LogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>controlador.LogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnyadirAlCarrito</servlet-name>
        <servlet-class>controlador.AnyadirAlCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarDelCarrito</servlet-name>
        <servlet-class>controlador.EliminarDelCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarArtCarrito</servlet-name>
        <servlet-class>controlador.EliminarArtCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarCarrito</servlet-name>
        <servlet-class>controlador.ActualizarCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmarPedido</servlet-name>
        <servlet-class>controlador.ConfirmarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Facturar</servlet-name>
        <servlet-class>controlador.Facturar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportarXML</servlet-name>
        <servlet-class>controlador.ExportarXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportarPDF</servlet-name>
        <servlet-class>controlador.ExportarPDF</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnyadirAlCarrito</servlet-name>
        <url-pattern>/AnyadirAlCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarDelCarrito</servlet-name>
        <url-pattern>/EliminarDelCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarArtCarrito</servlet-name>
        <url-pattern>/EliminarArtCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarCarrito</servlet-name>
        <url-pattern>/ActualizarCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmarPedido</servlet-name>
        <url-pattern>/ConfirmarPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Facturar</servlet-name>
        <url-pattern>/Facturar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportarXML</servlet-name>
        <url-pattern>/ExportarXML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportarPDF</servlet-name>
        <url-pattern>/ExportarPDF</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
